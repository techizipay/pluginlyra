<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="micuentaweb_paypal" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
        <label><![CDATA[PAYPAL PAYMENT]]></label>
        <frontend_model>Lyranetwork\Micuentaweb\Block\Adminhtml\System\Config\Fieldset\Dependant</frontend_model>
        <attribute type="expanded">0</attribute>
        <attribute type="feature">paypal</attribute>

        <group id="micuentaweb_display_options" translate="label" type="text" sortOrder="101" showInDefault="1" showInWebsite="1" showInStore="1">
            <label><![CDATA[DISPLAY OPTIONS]]></label>
            <frontend_model>Magento\Config\Block\System\Config\Form\Fieldset</frontend_model>

            <field id="active" translate="label comment" type="select" sortOrder="1011" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[Activation]]></label>
                <comment><![CDATA[Enables / disables this payment method.]]></comment>
                <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                <config_path>payment/micuentaweb_paypal/active</config_path>
            </field>

            <field id="title" translate="label comment" type="text" sortOrder="1012" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[Method title]]></label>
                <comment><![CDATA[Method title to display on payment means page.]]></comment>
                <config_path>payment/micuentaweb_paypal/title</config_path>
            </field>

            <field id="sort_order" translate="label comment" type="text" sortOrder="1013" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[Sort order]]></label>
                <comment><![CDATA[In the payment methods list.]]></comment>
                <config_path>payment/micuentaweb_paypal/sort_order</config_path>
            </field>

            <field id="module_logo" translate="label comment" type="image" sortOrder="1014" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[Logo]]></label>
                <comment><![CDATA[Allowed file types: jpeg, gif, png.]]></comment>
                <config_path>payment/micuentaweb_paypal/module_logo</config_path>
                <frontend_model>Lyranetwork\Micuentaweb\Block\Adminhtml\System\Config\Form\Field\Logo</frontend_model>
                <backend_model>Lyranetwork\Micuentaweb\Model\System\Config\Backend\Logo</backend_model>
                <upload_dir config="system/filesystem/media" scope_info="0">micuentaweb/images</upload_dir>
                <base_url type="media" scope_info="0">micuentaweb/images</base_url>
            </field>
        </group>

        <group id="micuentaweb_restrictions" translate="label" type="text" sortOrder="102" showInDefault="1" showInWebsite="1" showInStore="1">
            <label><![CDATA[RESTRICTIONS]]></label>
            <frontend_model>Magento\Config\Block\System\Config\Form\Fieldset</frontend_model>

            <field id="allowspecific" translate="label comment" type="allowspecific" sortOrder="1021" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[Restrict to some countries]]></label>
                <comment><![CDATA[Buyer's billing countries in which this payment method is available.]]></comment>
                <config_path>payment/micuentaweb_paypal/allowspecific</config_path>
                <source_model>Magento\Payment\Model\Config\Source\Allspecificcountries</source_model>
            </field>

            <field id="specificcountry" translate="label comment" type="multiselect" sortOrder="1022" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[Authorized countries]]></label>
                <frontend_model>Lyranetwork\Micuentaweb\Block\Adminhtml\System\Config\Form\Field\Multiselect</frontend_model>
                <config_path>payment/micuentaweb_paypal/specificcountry</config_path>
                <source_model>Magento\Directory\Model\Config\Source\Country</source_model>
                <depends>
                    <field id="allowspecific">1</field>
                </depends>
            </field>

            <field id="custgroup_amount_restriction" translate="label comment" sortOrder="1023" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[Customer group amount restriction]]></label>
                <comment><![CDATA[Define amount restriction for each customer group.]]></comment>
                <frontend_model>Lyranetwork\Micuentaweb\Block\Adminhtml\System\Config\Form\Field\CustgroupOptions</frontend_model>
                <backend_model>Lyranetwork\Micuentaweb\Model\System\Config\Backend\CustgroupOptions</backend_model>
                <config_path>payment/micuentaweb_paypal/custgroup_amount_restriction</config_path>
            </field>
        </group>

        <group id="micuentaweb_payment_page" translate="label" type="text" sortOrder="103" showInDefault="1" showInWebsite="1" showInStore="1">
            <label><![CDATA[PAYMENT PAGE]]></label>
            <frontend_model>Magento\Config\Block\System\Config\Form\Fieldset</frontend_model>

            <field id="capture_delay" translate="label comment" type="text" sortOrder="1031" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[Capture delay]]></label>
                <comment><![CDATA[The number of days before the bank capture. Enter value only if different from Mi Cuenta Web general configuration.]]></comment>
                <config_path>payment/micuentaweb_paypal/capture_delay</config_path>
            </field>

            <field id="validation_mode" translate="label comment" type="select" sortOrder="1032" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[Validation mode]]></label>
                <comment><![CDATA[If manual is selected, you will have to confirm payments manually in your Mi Cuenta Web Back Office.]]></comment>
                <source_model>Lyranetwork\Micuentaweb\Model\System\Config\Source\ValidationMode</source_model>
                <config_path>payment/micuentaweb_paypal/validation_mode</config_path>
            </field>
        </group>
    </group>
</include>