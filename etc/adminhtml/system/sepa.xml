<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="micuentaweb_sepa" translate="label" sortOrder="9" showInDefault="1" showInWebsite="1" showInStore="1">
        <label><![CDATA[SEPA PAYMENT]]></label>
        <frontend_model>Lyranetwork\Micuentaweb\Block\Adminhtml\System\Config\Fieldset\Dependant</frontend_model>
        <attribute type="expanded">0</attribute>
        <attribute type="feature">sepa</attribute>

        <group id="micuentaweb_display_options" translate="label" type="text" sortOrder="91" showInDefault="1" showInWebsite="1" showInStore="1">
            <label><![CDATA[DISPLAY OPTIONS]]></label>
            <frontend_model>Magento\Config\Block\System\Config\Form\Fieldset</frontend_model>

            <field id="active" translate="label comment" type="select" sortOrder="911" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[Activation]]></label>
                <comment><![CDATA[Enables / disables this payment method.]]></comment>
                <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                <config_path>payment/micuentaweb_sepa/active</config_path>
            </field>

            <field id="title" translate="label comment" type="text" sortOrder="912" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[Method title]]></label>
                <comment><![CDATA[Method title to display on payment means page.]]></comment>
                <config_path>payment/micuentaweb_sepa/title</config_path>
            </field>

            <field id="sort_order" translate="label comment" type="text" sortOrder="913" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[Sort order ]]></label>
                <comment><![CDATA[In the payment methods list.]]></comment>
                <config_path>payment/micuentaweb_sepa/sort_order</config_path>
            </field>

            <field id="module_logo" translate="label comment" type="image" sortOrder="914" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[Logo]]></label>
                <comment><![CDATA[Allowed file types: jpeg, gif, png. ]]></comment>
                <config_path>payment/micuentaweb_sepa/module_logo</config_path>
                <frontend_model>Lyranetwork\Micuentaweb\Block\Adminhtml\System\Config\Form\Field\Logo</frontend_model>
                <backend_model>Lyranetwork\Micuentaweb\Model\System\Config\Backend\Logo</backend_model>
                <upload_dir config="system/filesystem/media" scope_info="0">micuentaweb/images</upload_dir>
                <base_url type="media" scope_info="0">micuentaweb/images</base_url>
            </field>
        </group>

        <group id="micuentaweb_restrictions" translate="label" type="text" sortOrder="92" showInDefault="1" showInWebsite="1" showInStore="1">
            <label><![CDATA[RESTRICTIONS]]></label>
            <frontend_model>Magento\Config\Block\System\Config\Form\Fieldset</frontend_model>

            <field id="allowspecific" translate="label comment" type="allowspecific" sortOrder="921" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[Restrict to some countries]]></label>
                <comment><![CDATA[Buyer's billing countries in which this payment method is available.]]></comment>
                <config_path>payment/micuentaweb_sepa/allowspecific</config_path>
                <source_model>Magento\Payment\Model\Config\Source\Allspecificcountries</source_model>
            </field>

            <field id="specificcountry" translate="label comment" type="multiselect" sortOrder="922" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[Authorized countries]]></label>
                <frontend_model>Lyranetwork\Micuentaweb\Block\Adminhtml\System\Config\Form\Field\Multiselect</frontend_model>
                <config_path>payment/micuentaweb_sepa/specificcountry</config_path>
                <source_model>Lyranetwork\Micuentaweb\Model\System\Config\Source\SepaAvailableCountry</source_model>
                <depends>
                    <field id="allowspecific">1</field>
                </depends>
            </field>

            <field id="custgroup_amount_restriction" translate="label comment" sortOrder="923" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[Customer group amount restriction]]></label>
                <comment><![CDATA[Define amount restriction for each customer group.]]></comment>
                <frontend_model>Lyranetwork\Micuentaweb\Block\Adminhtml\System\Config\Form\Field\CustgroupOptions</frontend_model>
                <backend_model>Lyranetwork\Micuentaweb\Model\System\Config\Backend\CustgroupOptions</backend_model>
                <config_path>payment/micuentaweb_sepa/custgroup_amount_restriction</config_path>
            </field>
        </group>

        <group id="micuentaweb_payment_page" translate="label" type="text" sortOrder="93" showInDefault="1" showInWebsite="1" showInStore="1">
            <label><![CDATA[PAYMENT PAGE]]></label>
            <frontend_model>Magento\Config\Block\System\Config\Form\Fieldset</frontend_model>

            <field id="capture_delay" translate="label comment" type="text" sortOrder="931" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[Capture delay]]></label>
                <comment><![CDATA[The number of days before the bank capture. Enter value only if different from Mi Cuenta Web general configuration.]]></comment>
                <config_path>payment/micuentaweb_sepa/capture_delay</config_path>
            </field>

            <field id="validation_mode" translate="label comment" type="select" sortOrder="932" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[Validation mode]]></label>
                <comment><![CDATA[If manual is selected, you will have to confirm payments manually in your Mi Cuenta Web Back Office.]]></comment>
                <source_model>Lyranetwork\Micuentaweb\Model\System\Config\Source\ValidationMode</source_model>
                <config_path>payment/micuentaweb_sepa/validation_mode</config_path>
            </field>
        </group>

         <group id="micuentaweb_advanced_options" translate="label" type="text" sortOrder="94" showInDefault="1" showInWebsite="1" showInStore="1">
            <label><![CDATA[PAYMENT OPTIONS]]></label>
            <frontend_model>Magento\Config\Block\System\Config\Form\Fieldset</frontend_model>

            <field id="mandate_mode" translate="label comment" type="select" sortOrder="941" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[SEPA direct debit mode]]></label>
                <comment><![CDATA[Select SEPA direct debit mode. Attention, the two last choices require the payment by token option on Mi Cuenta Web.]]></comment>
                <source_model>Lyranetwork\Micuentaweb\Model\System\Config\Source\SepaMandateMode</source_model>
                <config_path>payment/micuentaweb_sepa/mandate_mode</config_path>
            </field>

            <field id="oneclick_active" translate="label comment" type="select" sortOrder="942" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[Payment by token]]></label>
                <comment><![CDATA[The payment by token allows to pay orders without re-entering bank data at each payment. The <b>Payment by token</b> option should be enabled on your Mi Cuenta Web store to use this feature.]]></comment>
                <source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
                <config_path>payment/micuentaweb_sepa/oneclick_active</config_path>
                <depends>
                    <field id="mandate_mode">REGISTER_PAY</field>
                </depends>
            </field>
        </group>
    </group>
</include>