$oneClickActive = $block->isOneClickActive(); // 1-Click enabled?
$customer = $block->getCurrentCustomer(); // Logged in customer.
?>

<ul class="form-list"
    id="payment_form_<?php echo $block->escapeHtml($block->getMethodCode()); ?>"
    style="display:none;">
<?php
if ($block->isLocalCcType()) :
    $cards = $block->getAvailableCcTypes();
    $single = count($cards) === 1;

    // Show card logos as radio buttons.
    $amexCards = '';
    $cbCards = '';
    $otherCards = '';

    $first = true;
    foreach ($cards as $code => $label) {
        $html = '<div class="micuentaweb-card">';

        if ($single) {
            $html .= '<input type="hidden" id="micuentaweb_standard_cc_type_' . $block->escapeHtml($code)
                . '" value="' . $block->escapeHtml($code) . '" name="payment[micuentaweb_standard_cc_type]" />' ;
        } else {
            $html .= '<input type="radio" class="radio" id="micuentaweb_standard_cc_type_' . $block->escapeHtml($code)
                . '"' . ($first ? ' checked="checked"' : '') . ' value="'
                . $block->escapeHtml($code) . '" name="payment[micuentaweb_standard_cc_type]" />' ;
        }

        $first = false;
        $ccImageSrc = $block->getCcTypeImageSrc($code);

        $label = $ccImageSrc ? '<img alt="' . $block->escapeHtml($label) . '"
                                     src="' . $block->escapeHtml($ccImageSrc) . '"
                                     title="' . $block->escapeHtml($label) . '" />'
                : "<span>" . $block->escapeHtml($label) . "</span>";

        $html .= '<label for="micuentaweb_standard_cc_type_' . $block->escapeHtml($code) . '">'
                    . $label .
                  '</label>';
        $html .= '</div>';

        $network = $block->getCcTypeNetwork($code);
        if ($network === 'AMEX') {
            $amexCards .= $html;
        } elseif ($network === 'CB') {
            $cbCards .= $html;
        } else {
            $otherCards .= $html;
        }
    }

    if (! empty($cbCards)) {
        echo '<li class="micuentaweb-standard-cc-block">' . $cbCards . '</li>';
    }

    if (! empty($amexCards)) {
        echo '<li class="micuentaweb-standard-cc-block">' . $amexCards . '</li>';
    }

    if (! empty($otherCards)) {
        echo '<li class="micuentaweb-standard-cc-block">' . $otherCards . '</li>';
    }
endif;

if ($oneClickActive && $customer && $customer->getCustomAttribute('micuentaweb_identifier')) : ?>
        <li class="micuentaweb-standard-cc-block">
            <?php echo $block->escapeHtml(__('You will enter payment data after order confirmation.')); ?>
        </li>
        <li class="micuentaweb-standard-cc-block">
            <span class="or"><?php echo $block->escapeHtml(__('OR')); ?></span>
        </li>

        <li class="micuentaweb-standard-cc-block">
            <a class="micuentaweb-payment-link" href="javascript: void(0);"
                onclick="javascript: micuentawebUpdatePaymentBlock('id');">
                <?php echo $block->escapeHtml(__('Click here to pay with your stored means of payment.')); ?>
            </a>
        </li>

        <!-- Payment with registered card block. -->
        <li class="micuentaweb-standard-id-block">
            <input type="hidden" value="1" name="payment[micuentaweb_standard_use_identifier]" />
            <span>
                <?php echo $block->escapeHtml(__('You will pay with your stored means of payment %s.')); ?>
            </span>
        </li>

        <li class="micuentaweb-standard-id-block">
            <span class="or"><?php echo $block->escapeHtml(__('OR')); ?></span>
        </li>

        <li class="micuentaweb-standard-id-block">
            <a class="micuentaweb-payment-link" href="javascript: void(0);"
                onclick="javascript: micuentawebUpdatePaymentBlock('cc');">
                <?php echo $block->escapeHtml(__('Click here to pay with another means of payment.')); ?>
            </a>
        </li>
<?php endif; ?>
</ul>

<?php if ($oneClickActive && $customer && $customer->getCustomAttribute('micuentaweb_identifier')) : ?>
<script>
    require([
        'prototype'
    ], function() {
        // Display payment by identifier block when standard payment is selected.
        Event.stopObserving('p_method_micuentaweb_standard', 'click', onMethodMicuentawebStandardClick);
        Event.observe('p_method_micuentaweb_standard', 'click', onMethodMicuentawebStandardClick);

        micuentawebUpdatePaymentBlock.delay(0.2, 'id');
    });
</script>
<?php endif;?>