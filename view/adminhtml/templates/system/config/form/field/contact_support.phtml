<script>
require(
    [
        'jquery',
        'contactSupportComponent'
    ],
    function ($, component) {
        $('contact-support').on('sendmail', function(e) {
            $('body').trigger('processStart');
            $.ajax({
                method: 'POST',
                url: '<?php echo $block->escapeUrl($block->getButtonUrl()); ?>',
                data: e.originalEvent.detail,
                showLoader: true,
                success: function() {
                    location.reload();
                },
                always: function() {
                    $('body').trigger('processStop');
                }
            });
        });
    });
</script>

